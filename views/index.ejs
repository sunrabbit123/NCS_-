<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css">
    <link rel="stylesheet" href="/css/init.css">
    <link rel="stylesheet" href="/css/header_footer.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/post_list.css">
    <title>게시판</title>
</head>
<body>
    <div id="box">
        <%- include('partials/header') %>

        <main>
            <div class='picture'>
                <img src="/img/unsplash.jpg" alt="img">
            </div>
            <aside class="find_post" style="width:400px;">
                <ol>
                    <% for(const post of posts) { %>
                        <li id = 'posts'>

                            <div id = 'head'> 
                                <h2 class = 'title' name = 'title'><%= post.title %></h2>
                                <ol class = 'semi_title'>
                                    <li class = 'publisher' name='publisher'>작성자 : <%= post.publisher %></li>
                                    <li class = 'created_at' name = 'created_at'>게시일 : <%= post.created_at %></li>
                                </ol>
                            </div>

                            <span class = 'description' name = 'description'><%= post.description %></span>
                            
                        </li>
                    <% } %>
                </ol>
            </aside>
        </main>
        <%- include('partials/footer') %>
    </div>

</body>
</html>